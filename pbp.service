# /etc/systemd/system/pbp.service

[Unit]
Description=gunicorn daemon
Requires=pbp.socket
After=network.target


[Service]
User=root
Group=www-data
WorkingDirectory=/root/pbp
ExecStart=/root/pbp/.venv/bin/gunicorn     --access-logfile -     --workers 3     --bind unix:/run/pbp.sock     main.wsgi:application

[Install]
WantedBy=multi-user.target
